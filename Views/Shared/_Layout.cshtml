<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    <link href="~/Content/Style.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark p-3" id="mainNav">
        <div class="container-fluid">
            <a clas="navbar-brand" href="@Url.Action("Index", "Home")">CargoMaster</a>
            <div class="mx-5 collapse navbar-collapse d-sm-inline-flex d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Cerca Spedizioni", "CercaSpedizione", "Spedizione", new { area = "" }, new { @class = "nav-link mx-3" });
                        @Html.ActionLink("Gestione Clienti", "ListaCliente", "Cliente", new { area = "" }, new { @class = "nav-link mx-3" });
                        @Html.ActionLink("Gestione Spedizione", "ListaSpedizione", "Spedizione", new { area = "" }, new { @class = "nav-link mx-3" });

                    }
                    else
                    {
                        @Html.ActionLink("Cerca Spedizioni", "CercaSpedizione", "Spedizione", new { area = "" }, new { @class = "nav-link mx-3" });
                    }
                </div>

                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul style="list-style: none" class="m-0 p-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Ciao @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Profilo", "Profilo", "Login", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        @Html.ActionLink("Login", "Login", "Login", new { area = "" }, new { @class = "nav-link mx-3" });
                    }
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="d-flex justify-content-between">
            <p>&copy; @DateTime.Now.Year - CargoMaster</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
